{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "no-console": 1,
        "no-process-env": 1,
        "dot-location": 1,
        "no-invalid-this": 2,
        "no-unused-vars": [1, { "argsIgnorePattern": "next" }],
        "semi": [1, "always"],
        "linebreak-style": [1, "unix"],
        "no-template-curly-in-string": 2,
        "block-scoped-var": 1,
        "default-case": 2,
        "dot-notation": 1,
        "eqeqeq": 2,
        "no-alert": 1,
        "no-empty-function": 1,
        "no-eval": 2,
        "no-fallthrough": 2,
        "no-floating-decimal":1,
        "no-implied-eval": 2,
        "no-lone-blocks": 1,
        "no-multi-spaces": 1,
        "no-useless-concat": 1,
        "no-useless-return": 1,
        "require-await": 1,
        "require-unicode-regexp": 1,
        "vars-on-top": 1,
        "callback-return": 2,
        "handle-callback-err": 2,
        "no-lonely-if": 1,
        "no-duplicate-imports": 1,
        "no-var": 1,
        "prefer-arrow-callback": 1,
        "prefer-const": 1,
        "prefer-spread": 1,
        "prefer-template": 1
    }
}